<LoginScreen>:
    name: 'login'
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 20

        Label:
            text: "Вход"
            font_size: 32
            size_hint_y: None
            height: self.texture_size[1]

        Label:
            text: "Добро пожаловать в Password Manager!\nВведите свои учетные данные, чтобы продолжить."
            font_size: 16
            halign: 'center'
            valign: 'middle'
            text_size: self.width, None
            size_hint_y: None
            height: 60

        TextInput:
            id: login_input
            hint_text: "Логин"
            multiline: False
            size_hint_y: None
            height: 40

        TextInput:
            id: password_input
            hint_text: "Пароль"
            multiline: False
            password: True
            size_hint_y: None
            height: 40

        Label:
            id: message
            text: ""
            color: 1, 0, 0, 1
            size_hint_y: None
            height: self.texture_size[1]

        Button:
            text: "Войти"
            size_hint_y: None
            height: 50
            on_press: root.login(self)

        Button:
            text: "Нет аккаунта? Зарегистрироваться"
            size_hint_y: None
            height: 40
            background_color: 0.8, 0.8, 0.8, 1
            on_press: root.go_to_register(self)
