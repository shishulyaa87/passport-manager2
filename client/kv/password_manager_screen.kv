<PasswordManagerScreen>:
    name: 'password_manager'

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15

        BoxLayout:
            size_hint_y: None
            height: 40
            spacing: 15

            Button:
                text: 'Выход'
                size_hint_x: None
                width: 80
                background_color: 1, 0, 0, 1
                on_release:
                    app.root.current = 'login'

            Label:
                id: login_label
                text: 'Пользователь: '
                font_size: 16
                size_hint_x: 0.5
                valign: 'middle'

            BoxLayout:
                id: top_buttons_layout
                size_hint_x: 0.5
                spacing: 10
                # Кнопки добавляются из Python

        Label:
            text: 'Менеджер паролей'
            font_size: 24
            size_hint_y: None
            height: 40

        GridLayout:
            cols: 3
            size_hint_y: None
            height: 45
            spacing: 15
            row_force_default: True
            row_default_height: 45

            TextInput:
                id: search_service
                hint_text: 'Поиск по сервису'
                font_size: 16
                size_hint_x: 1.2

            TextInput:
                id: search_login
                hint_text: 'Поиск по логину'
                font_size: 16
                size_hint_x: 1.2

            TextInput:
                id: search_password
                hint_text: 'Поиск по паролю'
                font_size: 16
                size_hint_x: 1.2

        Label:
            text: root.message
            color: (1, 0, 0, 1) if 'Ошибка' in root.message else (0, 0.5, 0, 1)
            size_hint_y: None
            height: 30

        Label:
            text: 'Сохранённые пароли:'
            font_size: 18
            size_hint_y: None
            height: 30

        ScrollView:
            do_scroll_x: False

            GridLayout:
                id: passwords_layout
                cols: 1
                spacing: 5
                size_hint_y: None
                height: self.minimum_height
